# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your API keys below
# 3. Never commit the .env file!

# ============================================
# REQUIRED - Backend Routing (Mapbox)
# ============================================
# Get free API key at: https://account.mapbox.com/
# Free tier: 50,000 geocodes + 300,000 routes/month

ROUTING_API_KEY=pk.your_mapbox_token_here
GEOCODING_API_KEY=pk.your_mapbox_token_here

# ============================================
# REQUIRED - Frontend Map Display (Google Maps)
# ============================================
# Get API key at: https://console.cloud.google.com/
# Enable these APIs:
#   - Maps JavaScript API
#   - Directions API
#   - Geocoding API
# Free tier: $200/month credit (~28,000 map loads)

VITE_GOOGLE_MAPS_API_KEY=AIzaSyC...your_google_key_here

# ============================================
# OPTIONAL - AI Features
# ============================================

# OpenAI API Key (for frontend AI features)
VITE_OPENAI_API_KEY=

# Mapillary Token (for visual route scoring)
# Get from: https://www.mapillary.com/
MAPILLARY_TOKEN=
ENABLE_SCORING=false

# ============================================
# ADVANCED - Has Good Defaults (Don't Change)
# ============================================

OLLAMA_MODEL=llama3.1:8b-instruct-q4_K_M
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
SCORING_MIN_IMAGES=3
SCORING_MAX_IMAGES=10
